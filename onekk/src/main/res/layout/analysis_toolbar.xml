<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <ImageButton
        android:background="@color/colorPrimary"
        android:layout_marginEnd="16dp"
        android:id="@+id/backButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="?attr/homeAsUpIndicator"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_constraintEnd_toStartOf="@id/importButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:background="@color/colorPrimary"
        android:id="@+id/importButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_nv_import"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:background="@color/colorPrimary"
        android:id="@+id/selectAllButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_check_all"
        android:contentDescription="@string/menu_analysis_manager_select_all"
        app:layout_constraintEnd_toStartOf="@id/exportButton"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:background="@color/colorPrimary"
        android:id="@+id/exportButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_nv_export"
        android:contentDescription="@string/menu_analysis_manager_export"
        app:layout_constraintEnd_toStartOf="@id/deleteButton"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:background="@color/colorPrimary"
        android:id="@+id/deleteButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_delete"
        android:contentDescription="@string/menu_analysis_manager_delete_all"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>