<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="name"
            type="String" />
        <variable
            name="date"
            type="String" />
        <variable
            name="count"
            type="String" />
        <variable
            name="minAxisVar"
            type="String"/>
        <variable
            name="maxAxisVar"
            type="String"/>
        <variable
            name="weight"
            type="String" />
        <variable
            name="selected"
            type="boolean" />
        <variable
            name="minAxisAvg"
            type = "String"/>
        <variable
            name="maxAxisAvg"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@{selected ? @drawable/highlighted : @drawable/sample_card_background}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="5dp">

        <TextView style="@style/Text.ListItemAnalysisTitle"
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{name}"
            android:layout_marginStart="2dp"
            android:layout_marginTop="16dp"
            tools:text="Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView style="@style/Text.ListItemAnalysis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/maxAxisTextView"
            android:text="@{@string/list_item_analysis_length_prefix + '[' + String.valueOf(maxAxisAvg) + ']' + '(' + '[' + String.valueOf(maxAxisVar) + ']' + ')'}"
            android:layout_margin="2dp"
            app:layout_constraintTop_toBottomOf="@id/nameTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/minAxisTextView"/>

        <TextView style="@style/Text.ListItemAnalysis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/minAxisTextView"
            android:text="@{@string/list_item_analysis_width_prefix + '[' + String.valueOf(minAxisAvg) + ']' + '(' + '[' + String.valueOf(minAxisVar) + ']' + ')'}"
            android:layout_margin="2dp"
            app:layout_constraintTop_toBottomOf="@id/maxAxisTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/graph_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/ic_bar_chart_24px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/minAxisTextView"
            app:layout_constraintEnd_toStartOf="@id/countButton"/>
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintTop_toBottomOf="@id/weighButton"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"/>-->

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/countButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@{String.valueOf(count)}"
            android:layout_margin="8dp"
            tools:text="75"
            android:gravity="center"
            android:textSize="18sp"
            android:backgroundTint="@color/colorPrimary"
            android:drawableEnd="@drawable/ic_calculator"
            app:layout_constraintStart_toEndOf="@id/graph_button"
            app:layout_constraintTop_toBottomOf="@id/minAxisTextView"
            app:layout_constraintEnd_toStartOf="@id/weighButton"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/weighButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            tools:text="100g"
            android:textSize="18sp"
            android:gravity="center"
            android:backgroundTint="@color/colorPrimary"
            android:text="@{weight}"
            android:drawableEnd="@drawable/ic_scale"
            app:layout_constraintTop_toBottomOf="@id/minAxisTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/countButton"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
