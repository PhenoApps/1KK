<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="name"
            type="String" />
        <variable
            name="date"
            type="String" />
        <variable
            name="count"
            type="String" />
        <variable
            name="weight"
            type="String" />
        <variable
            name="selected"
            type="boolean" />
        <variable
            name="minAxisAvg"
            type = "String"/>
        <variable
            name="maxAxisAvg"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@{selected ? @drawable/highlighted : @drawable/cell}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{name}"
            android:gravity="start"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/countTextView"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/countTextView"
            android:text="@{count + ' ' + @string/list_item_analysis_seed_unit}"
            android:ellipsize="marquee"
            android:gravity="center"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nameTextView"
            app:layout_constraintBottom_toTopOf="@id/avgMinAxisTextView"
            app:layout_constraintEnd_toStartOf="@id/listWeightEditText"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/listWeightEditText"
            android:text="@{weight + ' ' + @string/list_item_analysis_weight_unit}"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/nameTextView"
            app:layout_constraintBottom_toTopOf="@id/avgMaxAxisTextView"
            app:layout_constraintStart_toEndOf="@id/countTextView"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/avgMinAxisTextView"
            android:text="@{minAxisAvg}"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/countTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/avgMaxAxisTextView"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/avgMaxAxisTextView"
            android:text="@{maxAxisAvg}"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/listWeightEditText"
            app:layout_constraintStart_toEndOf="@id/avgMinAxisTextView"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
