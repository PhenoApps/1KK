<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="name"
            type="String" />
        <variable
            name="date"
            type="String" />
        <variable
            name="count"
            type="String" />
        <variable
            name="minAxisVar"
            type="String"/>
        <variable
            name="maxAxisVar"
            type="String"/>
        <variable
            name="minAxisCv"
            type="String"/>
        <variable
            name="maxAxisCv"
            type="String"/>
        <variable
            name="weight"
            type="String" />
        <variable
            name="selected"
            type="boolean" />
        <variable
            name="minAxisAvg"
            type = "String"/>
        <variable
            name="maxAxisAvg"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@{selected ? @drawable/highlighted : @drawable/cell}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <TextView style="@style/Text.ListItemAnalysisTitle"
            android:id="@+id/nameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{name}"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            tools:text="Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView style="@style/Text.ListItemAnalysis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/avgAxisTextView"
            android:text="@{@string/list_item_analysis_axis_prefix + String.valueOf(minAxisAvg) + '/' + String.valueOf(maxAxisAvg)}"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/nameTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/exampleImageView"/>

        <TextView style="@style/Text.ListItemAnalysis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/varAxisTextView"
            android:text="@{@string/list_item_analysis_axis_var_prefix + String.valueOf(minAxisVar) + '/' + String.valueOf(maxAxisVar)}"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/avgAxisTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/exampleImageView"/>

        <TextView style="@style/Text.ListItemAnalysis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cvAxisTextView"
            android:text="@{@string/list_item_analysis_axis_cv_prefix + String.valueOf(minAxisCv) + '/' + String.valueOf(maxAxisCv)}"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/varAxisTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/exampleImageView"/>

        <ImageView style="@style/Text.ListItemAnalysis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exampleImageView"
            android:layout_margin="16dp"
            app:layout_constraintStart_toEndOf="@id/avgAxisTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nameTextView"/>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/countButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@{String.valueOf(count)}"
            android:layout_margin="16dp"
            tools:text="75"
            android:gravity="center"
            android:textSize="26sp"
            android:backgroundTint="@color/colorPrimary"
            android:drawableEnd="@drawable/ic_calculator"
            app:layout_constraintTop_toBottomOf="@id/cvAxisTextView"
            app:layout_constraintEnd_toStartOf="@id/weighButton"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/weighButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="16dp"
            tools:text="100g"
            android:textSize="26sp"
            android:gravity="center"
            android:backgroundTint="@color/colorPrimary"
            android:text="@{weight}"
            android:drawableEnd="@drawable/ic_scale"
            app:layout_constraintTop_toBottomOf="@id/cvAxisTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
